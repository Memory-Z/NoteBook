<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.inz.z.note_book">


    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 设置 壁纸 -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:name=".NoteBookApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:multiArch="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="true"
        android:theme="@style/NoteBookAppTheme.Transparent"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <!-- 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.6" />
        <meta-data
            android:name="android.notch_support"
            android:value="true" />

        <activity android:name=".view.activity.TestViewActivity" />
        <!-- 测试界面 -->
        <activity
            android:name=".view.activity.TestCalendarActivity"
            android:configChanges="screenSize|screenLayout|keyboardHidden|orientation"
            android:icon="@drawable/ic_baseline_device_hub_24"
            android:process=":test"
            android:theme="@style/NoteBookAppTheme.Transparent">
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN" />-->

            <!--                <category android:name="android.intent.category.LAUNCHER" />-->
            <!--            </intent-filter>-->
        </activity>
        <!-- 滑动界面 测试  -->
        <activity
            android:name=".view.activity.ScrollImageTestActivity"
            android:exported="true">
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN" />-->

            <!--                <category android:name="android.intent.category.DEFAULT" />-->
            <!--                <category android:name="android.intent.category.LAUNCHER" />-->
            <!--            </intent-filter>-->
        </activity>
        <!-- 主页 -->
        <activity
            android:name=".view.activity.MainActivity"
            android:configChanges="keyboardHidden|screenLayout|screenSize|orientation"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/NoteBookAppTheme.Transparent">
            <intent-filter>
                <category android:name="android.intent.category.APP_CALENDAR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 闪屏界面 -->
        <activity
            android:name=".view.activity.SplashActivity"
            android:configChanges="screenSize|screenLayout|keyboardHidden|orientation"
            android:exported="true"
            android:resizeableActivity="true"
            android:theme="@style/NoteBookAppTheme.Transparent"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 组 -->
        <activity
            android:name=".view.activity.NoteGroupActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- 设置 -->
        <activity
            android:name=".view.activity.SettingActivity"
            android:configChanges="screenLayout|keyboardHidden|screenSize"
            android:screenOrientation="fullSensor" />

        <!-- 笔记信息 -->
        <activity
            android:name=".view.activity.NewNoteActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible"
            tools:ignore="LockedOrientationActivity" />

        <!-- 任务计划列表 -->
        <activity
            android:name=".view.activity.ScheduleActivity"
            android:configChanges="screenLayout|screenSize|keyboardHidden"
            android:screenOrientation="fullSensor" />

        <!-- 应用列表 -->
        <activity
            android:name=".view.activity.ApplicationListActivity"
            android:configChanges="screenLayout|screenSize|keyboardHidden"
            android:screenOrientation="fullSensor" />

        <!-- 重复日期 -->
        <activity
            android:name=".view.activity.RepeatTypeActivity"
            android:configChanges="screenLayout|screenSize|keyboardHidden"
            android:screenOrientation="fullSensor" />

        <!-- 新记录 -->
        <activity
            android:name=".view.activity.NewRecordActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="LockedOrientationActivity" />

        <!-- 记录列表 -->
        <activity
            android:name=".view.activity.RecordActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity" />

        <!-- 新动态界面 -->
        <activity
            android:name=".view.activity.NewDynamicActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            android:windowSoftInputMode="adjustPan|stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <!-- 系统文件界面  -->
        <activity
            android:name=".view.activity.SystemFileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            android:windowSoftInputMode="adjustPan|stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <!-- 添加内容 界面  -->
        <activity
            android:name=".view.activity.AddContentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity" />

        <!-- 纪念日 界面 -->
        <activity
            android:name=".view.activity.MarkDayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity" />


        <!-- 设置壁纸界面  -->
        <activity
            android:name=".view.activity.SetWallpaperActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="true"
            android:theme="@style/NoteBookAppTheme.Transparent">
            <intent-filter>
                <action android:name="com.inz.z.note_boot.SetWallpaperAction" />
            </intent-filter>
        </activity>

        <!-- 创建 爱的画板 -->
        <activity
            android:name=".view.activity.CreateLovePanelActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize|navigation"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity">

        </activity>

        <!-- 选择 微件  笔记分组 -->
        <activity android:name=".view.activity.ChooseAppWidgetNoteGroupActivity" />


        <!-- 事件界面 -->
        <activity
            android:name=".view.activity.EventActivity"
            android:configChanges="layoutDirection|orientation|screenLayout|keyboard|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity">
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN" />-->

            <!--                <category android:name="android.intent.category.DEFAULT" />-->
            <!--                <category android:name="android.intent.category.LAUNCHER" />-->
            <!--            </intent-filter>-->
        </activity>


        <!-- 余额 界面 -->
        <activity
            android:name=".view.activity.BalanceActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|screenLayout|navigation"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity" />

        <!-- 创建 - 日图 -->
        <activity
            android:name=".view.activity.CreateDayImageActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|screenLayout|navigation"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoteBookAppTheme.Transparent"
            tools:ignore="LockedOrientationActivity" />

        <!-- 通知服务 -->
        <service
            android:name=".service.NotificationForegroundService"
            android:exported="false"
            android:label="@string/app_name">
            <!--            <intent-filter>-->
            <!--                &lt;!&ndash; 新通知 &ndash;&gt;-->
            <!--                <action android:name="com.inz.z.note_book.action.NewNotification" />-->
            <!--            </intent-filter>-->
        </service>
        <!-- 计划服务 -->
        <service
            android:name=".service.ScheduleService"
            android:label="@string/schedule" />

        <!-- 用户信息  -->
        <service
            android:name=".service.UserInfoService"
            android:label="@string/user_info_service">

        </service>

        <!-- 设置 壁纸 服务  -->
        <service
            android:name=".service.SetWallpaperService"
            android:label="@string/set_wallpaper_service" />

        <!-- 创建新LovePanel  -->
        <service
            android:name=".service.CreateLovePanelService"
            android:label="@string/create_love_panel" />

        <!-- 闹钟 广播 -->
        <receiver
            android:name=".broadcast.ClockAlarmBroadcast"
            android:exported="true"
            android:permission="true">
            <intent-filter>
                <action android:name="${applicationId}.action.CLOCK_ALARM_START_ACTION" />
                <action android:name="${applicationId}.action.ALARM_BROADCAST_BASE_ACTION" />
                <action android:name="${applicationId}.action.ALARM_BROADCAST_LAUNCHER_ACTION" />
                <action android:name="${applicationId}.action.ALARM_BROADCAST_SCHEDULE_ACTION" />
                <action android:name="${applicationId}.action.ALARM_BROADCAST_HINT_ACTION" />
                <action android:name="${applicationId}.action.ALARM_BROADCAST_CLOCK_ACTION" />
                <action android:name="${applicationId}.action.ALARM_BROADCAST_CLOCK_CREATE_LOVE_PANEL_ACTION" />
            </intent-filter>
        </receiver>

        <!-- 屏幕广播 -->
        <receiver
            android:name=".broadcast.ScreenBroadcast"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.USER_UNLOCKED" />
            </intent-filter>

        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />

        </provider>

        <!-- 调试 WorkManager -->
        <!--        <provider-->
        <!--            android:name="androidx.work.impl.WorkManagerInitializer"-->
        <!--            android:authorities="${applicationId}.workmanager-init"-->
        <!--            tools:node="remove"/>-->


        <!-- 桌面插件 -->
        <receiver
            android:name=".view.app_widget.NoteInfoAppWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <!-- 自定义 过滤 -->
            <intent-filter>
                <!-- 单项点击事项.  -->
                <action android:name="${applicationId}.action.NOTE_INFO_ITEM_CLICK" />
                <!-- 切换选中的组 -->
                <action android:name="${applicationId}.action.NOTE_INFO_CHANGE_NOTE_GROUP" />
                <!-- 更新笔记分组内容  -->
                <action android:name="${applicationId}.action.NOTE_INFO_UPDATE_NOTE_INFO" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/note_info_app_widget_info" />
        </receiver>

        <!-- 应用状态广播 -->
        <receiver
            android:name=".broadcast.ApplicationStatusBroadcast"
            android:exported="true"
            android:permission="application">
            <!-- 应用状态 -->
            <intent-filter>
                <action android:name="com.inz.z.note_book.action.APPLICATION_CREATE_ACTION" />
                <action android:name="com.inz.z.note_book.action.APPLICATION_PAUSE_ACTION" />
            </intent-filter>
            <!-- 备份服务状态 -->
            <intent-filter>
                <action android:name="${applicationId}.action.BACKUP_SERVICE_CREATE_ACTION" />
                <action android:name="${applicationId}.action.BACKUP_SERVICE_DESTROY_ACTION" />
            </intent-filter>
            <!-- 创建 LovePanel 状态 -->
            <intent-filter>
                <action android:name="${applicationId}.action.CREATE_LOVE_PANEL_FAILURE_ACTION" />
            </intent-filter>
        </receiver>
        <!-- 桌面插件 笔记列表更新服务 -->
        <service
            android:name=".view.app_widget.service.WidgetNoteInfoListRemoteViewsService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <service android:name=".service.NoteInfoAppWidgetService" />

        <!-- 浮动消息弹窗  -->
        <service android:name=".service.FloatMessageViewService" />
        <!-- 备份服务 -->
        <service
            android:name=".service.BackupService"
            android:exported="true"
            android:permission="backup"
            android:process=":backup">
            <intent-filter>
                <action android:name="${applicationId}.action.NOTE_INFO_BACKUP" />
            </intent-filter>
        </service>
    </application>

</manifest>