<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_normal_height"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/layout_padding"
    android:paddingEnd="@dimen/layout_padding">


    <ProgressBar
        android:id="@+id/item_load_more_pbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/image_icon_min_size"
        android:layout_height="@dimen/image_icon_min_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_layout"
        android:layout_toStartOf="@id/item_load_more_hint_tv" />

    <TextView
        android:id="@+id/item_load_more_hint_tv"
        style="@style/Base.Text.Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="6"
        android:singleLine="true"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>
