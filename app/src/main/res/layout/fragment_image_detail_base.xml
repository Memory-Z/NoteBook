<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_thread_color">

    <RelativeLayout
        android:id="@+id/fm_image_detail_base_bottom_content_rl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_text"
        android:layout_marginEnd="@dimen/margin_text"
        android:background="@drawable/bg_card_main_color_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintStart_toStartOf="parent">

    </RelativeLayout>


    <ImageView
        android:id="@+id/fm_image_detail_base_iv"
        style="@style/Base.ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_layout"
        android:background="@drawable/bg_card_white"
        android:contentDescription="@string/base_image"
        android:scaleType="centerInside"
        android:transitionName="@string/base_image"
        app:layout_constraintDimensionRatio="W, 9:16"
        app:layout_constraintHeight_percent=".4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

