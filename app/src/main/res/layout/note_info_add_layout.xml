    <com.inz.z.base.view.widget.BaseRelativeLayout
        android:id="@+id/note_info_add_content_brl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/note_info_add_content_bottom_ll"
        android:layout_below="@id/note_info_add_top_ll"
        app:base_relative_layout_content_view="@id/note_info_add_content_center_rl">

        <RelativeLayout
            android:id="@+id/note_info_add_content_center_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/note_info_add_content_top_time_tv"
                style="@style/NoteBookAppTheme.Text.Hint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_normal_height"
                android:gravity="center"
                android:text="@string/base_time"
                android:textColor="@color/textGray" />


            <LinearLayout
                android:id="@+id/note_info_add_content_content_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/note_info_add_content_image_rl"
                android:layout_below="@id/note_info_add_content_top_time_tv"
                android:orientation="vertical"
                android:paddingStart="@dimen/border_lr_dimen"
                android:paddingEnd="@dimen/border_lr_dimen">


                <com.inz.z.note_book.view.widget.ScheduleLayout
                    android:id="@+id/note_info_add_content_schedule_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:have_schedule_check_box="false" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/note_info_add_content_image_rl"
                style="@style/NoteBookAppTheme.Layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp160"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingStart="@dimen/border_lr_dimen"
                android:paddingEnd="@dimen/dp0">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/note_info_add_content_image_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp120"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:layout_width="@dimen/dp36"
                    android:layout_height="0dp"
                    android:layout_alignTop="@id/note_info_add_content_image_rv"
                    android:layout_alignBottom="@id/note_info_add_content_image_rv"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/_cover"
                    android:src="@drawable/bg_gradual_tran_to_white" />

                <ImageView
                    android:id="@+id/note_info_add_content_image_close_iv"
                    android:layout_width="@dimen/image_icon_size"
                    android:layout_height="@dimen/image_icon_size"
                    android:layout_above="@id/note_info_add_content_image_rv"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/_close"
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/ic_expand_more_black_24dp" />


            </RelativeLayout>


        </RelativeLayout>


    </com.inz.z.base.view.widget.BaseRelativeLayout>

    <!-- 底部栏 -->
    <LinearLayout
        android:id="@+id/note_info_add_content_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lineColor" />


        <RelativeLayout
            android:id="@+id/note_info_add_content_bottom_not_edit_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/note_info_add_content_bottom_not_share_ll"
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="@dimen/touch_target_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="72dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/NoteBookAppTheme.ImageView.Icon.Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/base_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_share_black_24dp" />

                <TextView
                    style="@style/NoteBookAppTheme.Text.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/share" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/note_info_add_content_bottom_not_del_ll"
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="@dimen/touch_target_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="72dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/NoteBookAppTheme.ImageView.Icon.Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/base_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_delete_black_24dp" />

                <TextView
                    style="@style/NoteBookAppTheme.Text.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/delete" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            style="@style/NoteBookAppTheme.Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/note_iab_image_ll"
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NoteBookAppTheme.ImageView.Icon.Min"
                    android:layout_width="@dimen/image_icon_min_size"
                    android:layout_height="@dimen/image_icon_min_size"
                    android:contentDescription="@string/base_image"
                    android:src="@drawable/ic_vd_image" />

                <TextView
                    style="@style/NoteBookAppTheme.Text.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_space_between_min_dimen"
                    android:text="@string/base_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NoteBookAppTheme.ImageView.Icon.Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/base_image"
                    android:src="@drawable/ic_alarm_add_black_24dp" />

                <TextView
                    style="@style/NoteBookAppTheme.Text.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/base_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NoteBookAppTheme.ImageView.Icon.Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/base_image"
                    android:src="@drawable/ic_alarm_add_black_24dp" />

                <TextView
                    style="@style/NoteBookAppTheme.Text.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/base_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NoteBookAppTheme.ImageView.Icon.Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/base_image"
                    android:src="@drawable/ic_alarm_add_black_24dp" />

                <TextView
                    style="@style/NoteBookAppTheme.Text.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/base_image" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>