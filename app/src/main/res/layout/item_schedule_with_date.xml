<?xml version="1.0" encoding="utf-8"?>

<!-- 计划项。标注时间 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_schedule_wd_left_rl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".2">

        <LinearLayout
            android:id="@+id/item_schedule_wd_left_line_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <View
                android:id="@+id/item_schedule_wd_left_top_view"
                android:layout_width="@dimen/line_size"
                android:layout_height="26dp"
                android:layout_marginBottom="-1dp"
                android:background="@color/white"
                android:backgroundTint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/item_schedule_wd_left_icon_iv"
                android:layout_width="@dimen/image_icon_min_size"
                android:layout_height="@dimen/image_icon_min_size"
                android:contentDescription="@string/_image"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ring_white"
                app:tint="@color/colorPrimary" />

            <View
                android:id="@+id/item_schedule_wd_left_bottom_view"
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:layout_marginTop="-1dp"
                android:background="@color/white"
                android:backgroundTint="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_text"
            android:layout_toStartOf="@id/item_schedule_wd_left_line_ll"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingTop="26dp">

            <TextView
                android:id="@+id/item_schedule_wd_left_time_tv"
                style="@style/Base.Text.Second"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_icon_min_size"
                android:maxLength="4"
                android:text="@string/_date_time_format_M_d" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_schedule_wd_right_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_text_layout"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_schedule_wd_left_rl"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_text_layout"
            android:background="@drawable/bg_card_schedule"
            android:orientation="vertical"
            android:padding="@dimen/margin_text_layout"
            android:paddingStart="@dimen/margin_layout"
            android:paddingEnd="@dimen/margin_layout"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:id="@+id/item_schedule_wd_right_top_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_text_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_text_layout"
                    android:layout_toStartOf="@id/item_schedule_wd_collect_iv"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_schedule_wd_title_tv"
                        style="@style/Base.Text.Title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_normal_height"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_schedule_wd_hint_tv"
                        style="@style/Base.Text.Hint"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/min_text_hint_height"
                        android:layout_marginTop="@dimen/margin_text"
                        android:ellipsize="end"
                        android:lines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_schedule_wd_collect_iv"
                    android:layout_width="@dimen/image_icon_size"
                    android:layout_height="@dimen/image_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/_image"
                    android:src="@drawable/ic_baseline_star_border_24" />
            </RelativeLayout>

            <!--  -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_schedule_wd_image_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/item_schedule_wd_image_line_view"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/lineWhiteColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_text_layout"
                    android:contentDescription="@string/_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_photo_2"
                    app:layout_constraintDimensionRatio="H, 16: 9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_schedule_wd_image_line_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>