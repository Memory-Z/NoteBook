<?xml version="1.0" encoding="utf-8"?>

<!-- 预览 壁纸 Item  -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/item_preview_wallpaper_choose_rbtn"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_padding"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/item_preview_wallpaper_rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_text_layout"
        android:layout_marginTop="@dimen/margin_text_layout"
        android:layout_marginEnd="@dimen/text_body_size"
        android:background="@drawable/bg_card_only_border"
        android:paddingBottom="@dimen/margin_text_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_preview_wallpaper_choose_rbtn"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 显示壁纸图片 -->
        <ImageView
            android:id="@+id/item_preview_wallpaper_iv"
            style="@style/Base.ImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:contentDescription="@string/_image"
            android:src="@drawable/img_photo_1" />

        <!-- 图片遮罩层 -->
        <ImageView
            android:id="@+id/item_preview_wallpaper_hover_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_preview_wallpaper_iv"
            android:layout_alignTop="@id/item_preview_wallpaper_iv"
            android:layout_alignEnd="@id/item_preview_wallpaper_iv"
            android:layout_alignBottom="@id/item_preview_wallpaper_iv"
            android:contentDescription="@string/_image"
            android:src="@color/gray_50_color"
            android:visibility="gone" />

        <View
            android:id="@+id/item_preview_wallpaper_line_v"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/item_preview_wallpaper_iv"
            android:background="@color/line_color" />

        <!-- 底部信息 -->
        <RelativeLayout
            android:id="@+id/item_preview_wallpaper_bottom_rl"
            style="@style/Base.Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_preview_wallpaper_line_v"
            android:layout_marginTop="@dimen/margin_text_layout">

            <TextView
                android:id="@+id/item_preview_wallpaper_start_time_tv"
                style="@style/Base.Text.Second"
                android:layout_width="@dimen/dp120"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_layout"
                android:layout_toStartOf="@id/item_preview_wallpaper_switch" />

            <Switch
                android:id="@+id/item_preview_wallpaper_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/_wallpaper"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/item_preview_wallpaper_all_hover_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>