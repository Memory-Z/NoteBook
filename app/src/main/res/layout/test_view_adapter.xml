<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/test_top_bg_iv"
        style="@style/Base.ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tint="@null"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="@id/test_view_top_ll"
        app:layout_constraintEnd_toEndOf="@id/test_view_top_ll"
        app:layout_constraintStart_toStartOf="@id/test_view_top_ll"
        app:layout_constraintTop_toTopOf="@id/test_view_top_ll" />


    <LinearLayout
        android:id="@+id/test_view_top_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp196" />

    </LinearLayout>


    <Button
        android:id="@+id/test_view_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_view_top_ll" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/test_view_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_view_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>