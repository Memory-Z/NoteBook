<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card_item">

    <LinearLayout
        android:id="@+id/widget_cd_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            style="@style/Base.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_date_time_format_h_m"
            android:textColor="@color/colorPrimary"
            android:textSize="46sp" />

    </LinearLayout>

    <View
        android:id="@+id/widget_cd_time_line_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:layout_below="@id/widget_cd_time_ll"
        android:layout_marginStart="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_text_layout"
        android:layout_marginBottom="@dimen/margin_layout"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:id="@+id/widget_cd_time_status_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_cd_time_line_v">

        <TextView
            android:id="@+id/widget_cd_time_status_tv"
            style="@style/Base.Text.Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_layout" />

    </RelativeLayout>
</RelativeLayout>