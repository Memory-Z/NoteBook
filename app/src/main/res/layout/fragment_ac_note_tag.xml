<?xml version="1.0" encoding="utf-8"?>

<!-- 笔记标签 Fragment  -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 使用的标签 -->
    <HorizontalScrollView
        android:id="@+id/fm_ac_note_info_hsv"
        style="@style/Base.Layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_normal_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/fm_ac_note_info_used_ll"
            style="@style/Base.Layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_normal_height"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- 全部标签 -->
    <RelativeLayout
        android:id="@+id/fm_ac_note_info_content_rl"
        style="@style/Base.Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fm_ac_note_info_hsv">

        <TextView
            style="@style/Base.Text.Second"
            android:layout_width="match_parent"

            android:layout_height="@dimen/list_item_normal_height" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>