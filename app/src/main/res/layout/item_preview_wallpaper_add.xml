<?xml version="1.0" encoding="utf-8"?>

<!-- 预览界面 添加 壁纸: 跳转至图片选择界面 。 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_preview_wallpaper_add_content_rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_text_layout"
        android:layout_marginTop="@dimen/margin_text_layout"
        android:layout_marginEnd="@dimen/text_body_size"
        android:layout_marginBottom="@dimen/layout_padding"
        android:background="@drawable/bg_card_only_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_preview_wallpaper_add_iv"
            style="@style/Base.ImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp120"
            android:contentDescription="@string/_add_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_black_24dp"
            app:tint="@color/gray_50_color" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>