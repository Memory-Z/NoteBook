<?xml version="1.0" encoding="utf-8"?>

<!-- 文字选中Item 模板  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NoteBookAppTheme.Layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/touch_target_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/item_choose_text_check_box"
        style="@style/NoteBookAppTheme.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_choose_text_content_tv"
        style="@style/NoteBookAppTheme.Text.Second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1" />
</LinearLayout>