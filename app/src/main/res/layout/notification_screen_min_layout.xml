<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Base.Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/button_normal_height"
    android:orientation="horizontal">
    <!-- 屏幕显示时间 -->

    <TextView
        android:id="@+id/notification_screen_2_tv"
        style="@style/Base.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_screen_min_hint" />

    <TextView
        android:id="@+id/notification_screen_duration_tv"
        style="@style/Base.Text.Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />
</LinearLayout>
