<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_schedule_content_root_card_view"
        style="@style/NoteBookAppTheme.Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_nav_padding"
        android:layout_marginTop="@dimen/layout_nav_padding"
        android:layout_marginEnd="@dimen/layout_nav_padding"
        android:layout_marginBottom="@dimen/layout_nav_padding"
        app:cardCornerRadius="@dimen/card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 左侧 颜色栏  -->
            <View
                android:id="@+id/item_schedule_content_root_card_left_view"
                android:layout_width="@dimen/item_schedule_state_width"
                android:layout_height="0dp"
                android:layout_alignTop="@id/item_schedule_content_root_card_ll"
                android:layout_alignBottom="@id/item_schedule_content_root_card_ll"
                android:background="@drawable/bg_schedule_left_card_radius" />

            <LinearLayout
                android:id="@+id/item_schedule_content_root_card_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_schedule_content_root_card_left_view"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding">

                <!-- 计划日期 + 类型  -->
                <RelativeLayout
                    android:id="@+id/item_schedule_content_root_rl"
                    style="@style/NoteBookAppTheme.Layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/touch_target_height">

                    <!-- 计划时间 -->
                    <TextView
                        android:id="@+id/item_schedule_time_tv"
                        style="@style/NoteBookAppTheme.Text.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_max_title_size" />

                    <!-- 计划类型 -->
                    <TextView
                        android:id="@+id/item_schedule_type_tv"
                        style="@style/NoteBookAppTheme.Text.Hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/item_schedule_time_tv"
                        android:layout_marginStart="@dimen/content_space_between_dimen"
                        android:layout_toStartOf="@id/item_schedule_content_state_tv"
                        android:layout_toEndOf="@id/item_schedule_time_tv" />

                    <!-- 状态 -->
                    <TextView
                        android:id="@+id/item_schedule_content_state_tv"
                        style="@style/NoteBookAppTheme.Text.Second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_subhead_size" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/lightGray" />

                <!-- 计划备注信息 -->
                <LinearLayout
                    android:id="@+id/item_schedule_content_ll"
                    style="@style/NoteBookAppTheme.Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_space_between_dimen"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_schedule_content_tv"
                        style="@style/NoteBookAppTheme.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start|top"
                        android:maxLines="2" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>