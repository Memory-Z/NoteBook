<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="logInfo"
            type="com.inz.z.note_book.database.bean.OperationLogInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_height">

        <TextView
            android:id="@+id/item_log_operation_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <HorizontalScrollView
            android:id="@+id/item_log_operation_hsv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_log_operation_name_tv"
            app:layout_constraintTop_toTopOf="parent">

        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
