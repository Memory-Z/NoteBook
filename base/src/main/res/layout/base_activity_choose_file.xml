<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.inz.z.base.view.widget.BaseNavLayout
        android:id="@+id/base_choose_file_top_bnl"
        style="@style/Base.Layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/touch_target_height"
        android:background="@color/colorPrimary"
        app:base_center_layout="@id/base_choose_file_top_center_rl"
        app:base_left_layout="@id/base_choose_file_top_left_ll"
        app:base_right_layout="@id/base_choose_file_top_right_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/base_choose_file_top_left_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/base_choose_file_top_center_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/base_choose_file_top_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/base_choose_file_top_r_more_iv"
                style="@style/Base.ImageView.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/base_image"
                android:src="@drawable/ic_more_vert_black_24dp"
                app:tint="@color/text_white_base_color" />


        </LinearLayout>

    </com.inz.z.base.view.widget.BaseNavLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/base_choose_file_content_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/base_choose_file_bottom_bnl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/base_choose_file_top_bnl" />

    <com.inz.z.base.view.widget.BaseNavLayout
        android:id="@+id/base_choose_file_bottom_bnl"
        android:layout_width="0dp"
        android:layout_height="@dimen/touch_target_height"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/base_choose_file_bottom_left_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/base_choose_file_bottom_center_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/base_choose_file_bottom_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
    </com.inz.z.base.view.widget.BaseNavLayout>
</androidx.constraintlayout.widget.ConstraintLayout>