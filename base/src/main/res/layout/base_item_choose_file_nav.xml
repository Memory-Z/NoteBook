<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_text"
    android:paddingBottom="@dimen/margin_text">

    <TextView
        android:id="@+id/base_item_cfn_tv"
        style="@style/Base.Text.Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_text_layout" />

    <ImageView
        android:id="@+id/base_item_cfn_iv"
        style="@style/Base.ImageView.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_text_layout"
        android:contentDescription="@string/_right_arrow"
        android:src="@drawable/ic_vd_right_arrow"
        app:tint="@color/text_black_base_color" />
</LinearLayout>